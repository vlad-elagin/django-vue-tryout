.modal-container
  width 0
  height 0

.modal-overlay
  position fixed
  top 0
  bottom 0
  left 0
  right 0

  background-color rgba(black, 0.5)

.modal
  width 500px
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)

  background-color white
  border 2px solid $green
  border-radius 10px

  &-header
    min-height 50px
    background-color $green
    color white
    padding 0 10px

    display flex
    justify-content space-between
    align-items center

    span:first-of-type
      font-size 20px

  &-body
    padding 10px 15px
    ul
      padding 0
      list-style none

      .error-field
        color $red
        text-transform uppercase

      li:not(.error-field)
        padding-left 10px
        font-size smaller

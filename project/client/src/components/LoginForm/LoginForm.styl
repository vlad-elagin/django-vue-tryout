.login-form
  width 100%
  max-width 600px

  margin 60px auto 0

  display flex
  flex-flow column
  align-items flex-end

  input
    width 100%
    height 40px
    line-height 40px
    font-size 26px
    outline 0
    border 0
    border-top 2px solid $green
    border-bottom 2px solid $green
    margin-bottom 20px
    padding 0 10px
    color darken($green, 20%)

    &::placeholder
      color lighten($green, 50%)

.current-pomodoro
  // TODO temp
  margin-top 30px

  width 100%
  height 60px

  display flex
  align-items center
  justify-content space-between

  padding 0 10px

  background-color $blue
  border-radius 10px

  color white

  .progress-bar
    position relative
    width 490px
    height 35px
    margin-right 10px
    border 2px solid white
    border-radius 5px

    &-time
      position absolute
      left 245px
      top 50%
      transform translate(-50%, -45%)

    &-inner
      position absolute
      left 0
      height 100%

      background-color white
      transition width .3s ease
      overflow hidden

      .progress-bar-time
        color $blue

      // TODO temp
      width 50%
